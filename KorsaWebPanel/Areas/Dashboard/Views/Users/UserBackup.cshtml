            columnDefs: [{
                orderable: false,
                className: 'select-checkbox',
                targets: [1, 2]
            }],
            order: [[0, 'desc']]
        });

        $('#datatable_notifications').DataTable({
            "pagingType": "full_numbers",
            columnDefs: [{
                orderable: true,
                className: 'select-checkbox'
            }],
            order: [[0, 'desc']]
        });
    });

</script>

